

<div class="container" style="padding: 25px;">
  <%= form_for(@task) do |t| %>
    <div class="form-group row">
      <div class="col-md-6 col-md-offset-3">
        <%= t.label :title %>
        <%= t.text_field :title, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-6 col-md-offset-3">
        <%= t.label :details %>
        <%= t.text_field :details, class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-md-6 col-md-offset-3">
        <%= t.submit class: 'btn btn-primary form-control' %>
      </div>
    </div>
  <% end %>
</div>
